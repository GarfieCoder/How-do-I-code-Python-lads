print('Shoot!')

if botchoice == 1:
    botchoice = 'Rock'

if botchoice == 2:
    botchoice = 'Paper'

if botchoice == 3:
    botchoice = 'Scissors'
    


print('')
print('Bot:',botchoice)
print('========')
print('You:',userchoice)

if userchoice == 'Rock':
    userchoice = rock

if userchoice == 'Paper':
    userchoice = paper

if userchoice =='Scissors':
    userchoice = scissors

if botchoice == 'Rock':
    botchoice = 1

if botchoice == 'Paper':
    botchoice = 2

if botchoice == 'Scissors':
    botchoice = 3
    
if userchoice == 'Rock':
    userchoice = rock

if userchoice == 'Paper':
    userchoice = paper

if userchoice =='Scissors':
    userchoice = scissors

if userchoice == botchoice:
    print('Tie!')
if userchoice < botchoice:
    print('You Lose!')
if userchoice > botchoice:
    print('You win!')
